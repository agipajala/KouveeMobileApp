<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coklat1"
    android:orientation="vertical"
    tools:context=".Activity.Ukuran.MenuUkuran">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:text="UKURAN HEWAN"
        android:textAlignment="center"
        android:textColor="@color/emas"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/baris1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnTampilProduk"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/logo"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tampil"
                android:textAlignment="center"
                android:textColor="@color/emas"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnTampilLogProduk"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/logo"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:text="Tampil Log Hapus"
                android:textAlignment="center"
                android:textColor="@color/emas"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnTambahProduk"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/logo"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tambah"
            android:textAlignment="center"
            android:textColor="@color/emas"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>